{% extends 'base.html.twig' %}

{% block body %}
    <h1>Scenery</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ scenery.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ scenery.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ scenery.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('scenery_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('scenery_edit', { 'id': scenery.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
