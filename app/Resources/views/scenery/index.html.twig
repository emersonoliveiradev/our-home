{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sceneries list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for scenery in sceneries %}
            <tr>
                <td><a href="{{ path('scenery_show', { 'id': scenery.id }) }}">{{ scenery.id }}</a></td>
                <td>{{ scenery.title }}</td>
                <td>{{ scenery.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('scenery_show', { 'id': scenery.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('scenery_edit', { 'id': scenery.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('scenery_new') }}">Create a new scenery</a>
        </li>
    </ul>
{% endblock %}
